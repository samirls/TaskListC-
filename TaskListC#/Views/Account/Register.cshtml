@model TaskListC_.ViewModel.RegisterVM

<div class="d-flex justify-content-center">
  <div class="mt-5 p-3" style="width: 100%; max-width: 640px;">
    <form asp-controller="Account" asp-action="Register" method="post">
      <div asp-validation-summary="All" class="text-danger mb-3"></div>
      <h1 class="h3 mb-3 fw-normal text-center">Register</h1>
      <div class="row g-3">
        <div class="col-12 col-md-6">
          <div class="form-floating">
            <input type="text" class="form-control" id="nameInput" placeholder="E.g: John" asp-for="Name">
            <label for="nameInput">First Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
        </div>
        <div class="col-12 col-md-6">
          <div class="form-floating">
            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="Email">
            <label for="floatingInput">Email address</label>
            <span asp-validation-for="Email" class="text-danger"></span>
          </div>
        </div>
        <div class="col-12 col-md-6">
          <div class="form-floating">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password" asp-for="Password">
            <label for="floatingPassword">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
          </div>
        </div>
        <div class="col-12 col-md-6">
          <div class="form-floating">
            <input type="password" class="form-control" id="confirmPassword" placeholder="Password" asp-for="ConfirmPassword">
            <label for="confirmPassword">Confirm your Password</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
          </div>
        </div>
        <div class="col-12 col-md-6">
          <select class="form-select" asp-for="Sex">
            <option value="" selected>Sex</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="dontAnswer">Don't Answer</option>
          </select>
          <span asp-validation-for="Sex" class="text-danger"></span>
        </div>
        <div class="col-12 col-md-6">
          <select class="form-select" asp-for="Color">
            <option value="" selected>Color</option>
            <option value="blue">Blue</option>
            <option value="pink">Pink</option>
            <option value="green">Green</option>
          </select>
          <span asp-validation-for="Color" class="text-danger"></span>
        </div>
        <div class="col-12 col-md-6">
          <select class="form-select" asp-for="Age">
            <option value="" selected>Age</option>
            <option value="18orLess">18 or Less</option>
            <option value="19to25">19 to 25</option>
            <option value="26to35">26 to 35</option>
            <option value="36to45">36 to 45</option>
            <option value="45orAbove">45 or Above</option>
          </select>
          <span asp-validation-for="Age" class="text-danger"></span>
        </div>
      </div>
      <div class="pt-4 d-flex gap-1">
        <p>Already have an account?</p>
        <a asp-controller="Account" asp-action="Login" class="d-flex link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover">Login</a>
      </div>
      <div class="pt-3">
        <button class="btn btn-primary w-100 py-2" type="submit">Register</button>
      </div>
    </form>
  </div>
</div>
