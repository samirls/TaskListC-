@model TaskListC_.Models.ToDoTask

@{
  ViewData["Title"] = "Edit Task";
}

<h1>Edit Task</h1>
<hr />
<div>
  <form asp-action="EditTask">
    <div class="form-floating mb-3">
      <input type="text" asp-for="TaskTitle" name="TaskTitle" class="form-control" id="TaskTitle" placeholder="Title">
      <label for="taskDescription">Title</label>
      <span asp-validation-for="TaskTitle" class="text-danger"></span>
    </div>
    <div class="form-floating">
      <textarea type="text" asp-for="TaskDescription" name="TaskDescription" class="form-control" placeholder="Description" id="TaskDescription" style="height: 120px"></textarea>
      <label for="floatingTextarea2">Description</label>
      <span asp-validation-for="TaskDescription" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-center pt-4 gap-5">
      <a asp-action="Index" class="btn btn-secondary">Cancel</a>
      <button type="submit" class="btn btn-purple">Confirm Edit</button>
    </div>
  </form>
</div>

<div class="d-flex justify-content-center pt-5">
  
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}
